@model Lapangan
@{
    ViewData["Title"] = "Details for " + @Model.NamaLapangan;
    Layout = "_LayoutAdmin";
}

<div class="header--wrapper">
    <div class="header--title">
        <span>Primary</span>
        <h2>Dashboard</h2>
    </div>
    <div class="user--info">
        <img src="~/image/img.jpeg" alt="User Image">
    </div>
</div>

<div class="card" style="max-width: 900px; margin: auto;">
    <div class="card-header bg-primary text-white text-center" style="padding: 20px">
        <h3 class="mb-0">Details for @Model.NamaLapangan</h3>
    </div>
    <div class="card-body">

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">
                @ViewBag.Error
            </div>
        }

        <form method="post" enctype="multipart/form-data" action="/DaftarMember/Detail">
            <div class="mb-3 row">
                <label asp-for="NamaLapangan" class="col-sm-4 col-form-label font-weight-bold fs-5">Nama Lapangan</label>
                <div class="col-sm-8">
                    <input asp-for="NamaLapangan" type="text" class="form-control fs-5" placeholder="Input Nama Lapangan" readonly />
                    <span asp-validation-for="NamaLapangan" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3 row">
                <label asp-for="HargaSewaPerJam" class="col-sm-4 col-form-label font-weight-bold fs-5">Harga Sewa/Jam</label>
                <div class="col-sm-8">
                    <input asp-for="HargaSewaPerJam" type="text" class="form-control fs-5" placeholder="Input Harga Sewa/Jam" readonly />
                    <span asp-validation-for="HargaSewaPerJam" class="text-danger"></span>
                </div>
            </div>
            
            <div class="mb-3 row">
                <label asp-for="Photo" class="col-sm-4 col-form-label font-weight-bold fs-5">Foto Lapangan</label>
                <div class="col-sm-8">
                    @if (!string.IsNullOrEmpty(Model.Photo))
                    {
                        <div class="mb-3 row">
                            <div class="col-sm-8">
                                <img src="~/lapangan/@Model.Photo" class="img-fluid" alt="Lapangan Photo" width="300px" height="300px" />
                                <br />
                                <a href="@Url.Action("DownloadFoto", "Lapangan", new { id = Model.IdLapangan })" download style="color:#2596be">Download Photo</a>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="mb-3 row">
                            <label class="col-sm-4 col-form-label font-weight-bold fs-5">Foto Member</label>
                            <div class="col-sm-8">
                                <span>No Photo Available</span>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mt-2 mt-md-0">
                    <a asp-controller="Lapangan" asp-action="Index" class="btn btn-outline-secondary form-control">
                        Back to List
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>