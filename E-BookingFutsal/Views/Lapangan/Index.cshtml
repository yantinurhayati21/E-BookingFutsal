@model List<Lapangan>
@{
    ViewData["Title"] = "Data Student";
    Layout = "_Layout";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <title>Data Student</title>
    <meta content="" name="description">
    <meta content="Author" name="MJ Maraz">
    <link href="~/image/favicon.png" rel="icon">
    <link href="~/image/favicon.png" rel="apple-touch-icon">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <!-- DataTables CSS -->
    <link rel="stylesheet" href="~/css/datatables.min.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/style.css">
</head>

<body>
    <div class="header--wrapper">
        <div class="header--title">
        </div>
        <div class="user--info">
            <img src="~/image/img.jpeg" alt="">
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3>List Student</h3>
                    </div>
                    <div class="card-body">
                        <a href="/Student/Create" class="btn btn-success mb-2">Add Student</a>
                        <div class="data_table">
                            <table id="example" class="table table-striped table-bordered">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Nama Lapangan</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var student in Model)
                                    {
                                        <tr>
                                            <td>@student.NamaLapangan</td>                                    
                                            <td>
                                                <a href="/Student/Detail/@student.IdLapangan" class="btn btn-primary">Detail</a>
                                                <a href="/Student/Edit/@student.IdLapangan" class="btn btn-warning">Edit</a>
                                                <a href="/Student/Delete/@student.IdLapangan" class="btn btn-danger">Delete</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- JavaScript Files -->
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/jquery-3.6.0.min.js"></script>
    <script src="~/js/datatables.min.js"></script>
    <script src="~/js/pdfmake.min.js"></script>
    <script src="~/js/vfs_fonts.js"></script>
    <script src="~/js/custom.js"></script>
</body>

</html>
