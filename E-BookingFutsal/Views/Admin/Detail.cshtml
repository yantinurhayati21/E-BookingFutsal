@model E_BookingFutsal.Models.Admin

@{
    ViewData["Title"] = "Detail - Admin";
    Layout = "_LayoutAdmin";
}

<div class="header--wrapper">
    <div class="header--title">
        <span>Primary</span>
        <h2>Dashboard</h2>
    </div>
    <div class="user--info">
        <img src="~/img/image.jpeg" alt="">
    </div>
</div>

<div class="container mt-4">
    <h4 class="text-center mb-4">Details for @Model.Nama</h4>
    <hr />

    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-sm-6">
                    <div class="mb-3">
                        <label asp-for="Nama" class="col-form-label fw-bold fs-5">Nama Admin:</label>
                        <input asp-for="Nama" type="text" class="form-control" readonly />
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="mb-3">
                        <label asp-for="Username" class="col-form-label fw-bold fs-5">Username:</label>
                        <input asp-for="Username" type="text" class="form-control" readonly />
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="mb-3">
                        <label asp-for="Password" class="col-form-label fw-bold fs-5">Password:</label>
                        <input asp-for="Password" type="text" class="form-control" readonly />
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="mb-3">
                        <label asp-for="NoHp" class="col-form-label fw-bold fs-5">No Handphone:</label>
                        <input asp-for="NoHp" type="text" class="form-control" readonly />
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="mb-3">
                        <label asp-for="Email" class="col-form-label fw-bold fs-5">Email:</label>
                        <input asp-for="Email" type="text" class="form-control" readonly />
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="mb-3">
                        <label asp-for="Alamat" class="col-form-label fw-bold fs-5">Alamat:</label>
                        <input asp-for="Alamat" type="text" class="form-control" readonly />
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="mb-3">
                        <label asp-for="Roles.Name" class="col-sm-4 col-form-label font-weight-bold fs-5">Role</label>
                        <div class="col-sm-8">
                            <input asp-for="Roles.Name" type="text" class="form-control fs-5" placeholder="Input Role" readonly />
                            <span asp-validation-for="Roles.Name" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <input type="hidden" name="Id" value="@Model.Id" />
    <div class="row mt-3">
        <div class="col-6 col-md-3">
            <a asp-controller="Admin" asp-action="ListAdmin" class="btn btn-dark form-control">
                Back to List
            </a>
        </div>
    </div>
</div>

@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}