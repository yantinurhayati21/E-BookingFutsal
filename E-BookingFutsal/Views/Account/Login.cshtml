@model E_BookingFutsal.Models.ViewModel.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<style>
    .login-card {
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        padding: 30px;
        margin-top: 110px;
        margin-bottom: 50px;
    }

    .login-card .card-title {
        color: #333;
        font-size: 2.5rem;
        font-weight: bold;
        text-align: center;
        margin-bottom: 30px;
    }

    .btn-primary {
        background-color: #343a40; /* Warna latar belakang gelap */
        border-color: #343a40; /* Warna border yang sesuai */
        color: #ffffff; /* Warna teks putih */
        padding: 10px 20px;
        border-radius: 5px;
    }

        .btn-primary:hover {
            background-color: #1e2124; /* Warna latar belakang yang berbeda saat dihover */
            border-color: #1e2124; /* Warna border yang sesuai saat dihover */
        }


    /* Gaya untuk ikon close */
    .close-icon {
        position: absolute;
        top: 10px;
        right: 10px;
        color: #ccc;
        font-size: 24px;
        text-decoration: none;
    }

        .close-icon:hover {
            color: #999;
        }

    .form-group {
        margin-bottom: 20px;
    }

    label {
        font-weight: bold;
        display: block;
        margin-bottom: 5px;
    }

    input[type="text"],
    input[type="password"],
    select {
        border-radius: 5px;
        border: 1px solid #ccc;
        padding: 10px;
        width: 100%;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        padding: 10px 20px;
        border-radius: 5px;
    }

    .btn-primary:hover {
        background-color: #0056b3;
        border-color: #0056b3;
    }

    .text-danger {
        font-size: 12px;
    }

    /* Animation for form submission */
    .animated {
        animation-duration: 0.5s;
        animation-fill-mode: both;
    }

    .fadeOut {
        animation-name: fadeOut;
    }
</style>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card login-card">
                <div class="card-body">
                    <!-- Tambahkan ikon close di sini -->
                    <a href="/" class="close-icon"><i class="fa fa-times" aria-hidden="true"></i></a>

                    <h2 class="card-title text-center mb-4">Login</h2>

                    @if (ViewBag.ErrorMessage != null)
                    {
                        <div class="alert alert-danger" role="alert">
                            @ViewBag.ErrorMessage
                        </div>
                    }

                    <form id="loginForm" asp-action="Login" method="post">
                        <div class="form-group">
                            <label for="username"><i class="fa fa-user" aria-hidden="true"></i> Username</label>
                            <input type="text" asp-for="Username" class="form-control" id="username" placeholder="Enter your username">
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="password"><i class="fa fa-lock" aria-hidden="true"></i> Password</label>
                            <input type="password" asp-for="Password" class="form-control" id="password" placeholder="Enter your password">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="roles"><i class="fa fa-user-circle-o" aria-hidden="true"></i> Role</label>
                            <select asp-for="Roles" asp-items="@ViewBag.Roles" class="form-control" id="roles">
                                <option value="">Select Role</option>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">Login</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script>
// Animation for form submission
        document.getElementById("loginForm").addEventListener("submit", function (event) {
            event.preventDefault();
            var form = this;
            // Add animation class
            form.classList.add("animated", "fadeOut");
            setTimeout(function () {
                form.submit();
            }, 500); // Wait for animation to finish
        });
    </script>
}