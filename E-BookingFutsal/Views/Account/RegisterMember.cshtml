@model E_BookingFutsal.Models.DaftarMember

@{
    ViewData["Title"] = "Form - Register";
}

<div class="card" style="max-width: 600px; margin: auto; margin-top:110px;">
    <div class="card-header bg-primary text-white text-center">
        <h3 class="mb-0">Form Register</h3>
    </div>
    <div class="card-body">
        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger" role="alert">
                @ViewBag.Error
            </div>
        }

        <form method="post" enctype="multipart/form-data" action="/Account/RegisterMember">
            <div class="mb-3">
                <label asp-for="NamaMember" class="form-label">Full Name</label>
                <input asp-for="NamaMember" type="text" class="form-control" placeholder="Enter your full name" required>
                <span asp-validation-for="NamaMember" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Username" class="form-label">Username</label>
                <input asp-for="Username" type="text" class="form-control" placeholder="Choose a username" required>
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email Address</label>
                <input asp-for="Email" type="email" class="form-control" placeholder="Enter your email address" required>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label">Password</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Choose a password" required>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Alamat" class="form-label">Address</label>
                <input asp-for="Alamat" type="text" class="form-control" placeholder="Enter your address" required>
                <span asp-validation-for="Alamat" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="NoHp" class="form-label">Phone Number</label>
                <input asp-for="NoHp" type="tel" class="form-control" placeholder="Enter your phone number" required>
                <span asp-validation-for="NoHp" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="TanggalLahir" class="form-label">Date of Birth</label>
                <input asp-for="TanggalLahir" type="date" class="form-control" required>
                <span asp-validation-for="TanggalLahir" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Photo</label>
                <input type="file" class="form-control" name="foto" required>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <button type="submit" class="btn btn-primary w-100">Register</button>
                </div>
                <div class="col-md-6 mt-2 mt-md-0">
                    <a asp-controller="Account" asp-action="Show" class="btn btn-outline-secondary w-100">
                        Show list of users
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>
