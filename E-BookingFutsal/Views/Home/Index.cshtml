@model List<Lapangan>
@{
    Layout = "_Layout";
}
<partial name="_Notification" />
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style type="text/css">
        .welcome-menu {
            background-color: #f5f5f5;
            padding: 50px 0;
            display: flex;
            align-items: center;
        }

            .welcome-menu .welcome-text {
                flex: 1;
                padding: 0 50px;
            }

                .welcome-menu .welcome-text h1 {
                    font-size: 3rem;
                    margin-bottom: 20px;
                    color: #333;
                }

                .welcome-menu .welcome-text h4 {
                    font-size: 1rem;
                    margin-bottom: 30px;
                    color: #555;
                }

                .welcome-menu .welcome-text .btn {
                    font-size: 1.25rem;
                    padding: 10px 30px;
                }

            .welcome-menu img {
                max-width: 50%;
                margin-right: 50px;
            }

            .page-home{
            background-color: #f5f6f7;
            }

        .container {
            display: flex;
            max-width: 100%;
            justify-content: space-evenly;
            flex-wrap: wrap;
            flex-direction: row;
        }

        .card {
            margin: 10px;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 2px 20px rgba(0, 0, 0, 0.2);
            overflow: hidden;
            width: 300px;
        }

        .card-header img {
            width: 100%;
            height: 200px;
            object-fit: cover;
        }

        .card-body {
            padding: 20px;
            min-height: 250px;
        }

        .namerate {
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
        }

        .ratings {
            margin: 18px 0 15px;
        }

            .ratings .fa-solid {
                color: #f44336;
            }

            .ratings .fa-regular {
                color: #f44336;
                ;
            }

        .details {
            margin: 15px;
        }

            .details i {
                width: 22px;
                text-align: center;
            }

            .details .fa-solid {
                color: #3471eb;
            }

        .book {
            display: block;
            margin: 35px auto 30px;
            background: #fff;
            border: 1px solid #34a8eb;
            border-radius: 8px;
            padding: 10px 50px;
            color: #34a8eb;
            text-align: center;
            text-decoration: none;
            cursor: pointer;
            transition: 0.5s;
        }

            .book:hover {
                background: #34a8eb;
                border: 1px solid #34a8eb;
                color: #fff;
            }

    </style>
</head>
<body>
    <div class="main-content">
        <div class="welcome-menu">
            <img src="~/img/futsal.png" alt="Welcome Image">
            <div class="welcome-text">
                <h1 style="margin-top:30px;">Welcome to E-Booking Futsal</h1>
                <h4>
                    Selamat datang di E-Booking Futsal, tempat terbaik untuk booking lapangan futsal secara online,
                    Dapatkan pengalaman bermain futsal yang lebih menyenangkan dan praktis dengan E-Booking Futsal!
                    Segera booking lapangan favorit Anda sekarang juga dan nikmati berbagai keuntungan serta kemudahan yang kami tawarkan. 
                    Bergabunglah sebagai member kami dengan <a href="Account/RegisterMember">klik disini</a> dan dapatkan diskon eksklusif setiap pemesanan.

                    Jadi bagian dari komunitas kami dan nikmati pengalaman bermain futsal yang lebih menyenangkan dan terjangkau. Ayo, booking sekarang dan rasakan perbedaannya!
                </h4>
                <a href="#bookingNow" class="btn btn-dark btn-lg">Booking Sekarang</a>
            </div>
        </div>
        <div id="wrapper-site">
            <div id="content-wrapper" class="full-width">
                <div id="main">
                    <section class="page-home">
                        <div class="section spacing-10 group-image-special" id="events">
                            <h1 class="text-center">Events</h1>
                            <div class="row">
                                <div class="col-lg-6 col-md-6">
                                    <div class="effect">
                                        <a href="#">
                                            <img class="img-fluid width-100" src="~/home/img/Event-1.jpeg" alt="banner-2" title="Events-1">
                                        </a>
                                    </div>
                                </div>
                                <div class="col-lg-6 col-md-6">
                                    <div class="effect">
                                        <a href="#">
                                            <img class="img-fluid width-100" src="~/home/img/event.jpeg" alt="banner-2" title="Events-2">
                                        </a>
                                    </div>
                                </div>
                                <div class="col-lg-6 col-md-6">
                                    <div class="effect">
                                        <a href="#">
                                            <img class="img-fluid width-100" src="~/home/img/event-2.jpg" alt="banner-2" title="Events-2">
                                        </a>
                                    </div>
                                </div>
                                <div class="col-lg-6 col-md-6">
                                    <div class="effect">
                                        <a href="#">
                                            <img class="img-fluid width-100" src="~/home/img/event-3.jpg" alt="banner-2" title="Events-2">
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                </div>
            </div>
        </div>
        <h1 class="text-center mt-5" id="bookingNow">Start Your Booking</h1>
        <div class="container">
            @foreach (var lapangan in Model)
            {
                <div class="col">
                    <div class="card">
                        <div class="card-header">
                            <img src="~/lapangan/@lapangan.Photo" alt="rover" />
                        </div>
                        <div class="card-body">
                            <div class="namerate">
                                <h3>@lapangan.NamaLapangan</h3>
                                <div class="ratings">
                                    <i class="fa-solid fa-star"></i>
                                    <i class="fa-solid fa-star"></i>
                                    <i class="fa-solid fa-star"></i>
                                    <i class="fa-solid fa-star"></i>
                                    <i class="fa-solid fa-star"></i>
                                </div>
                            </div>
                            <div class="details">
                                <i class="fa-solid fa-location-dot"></i>
                                <span>Kawali - Ciamis</span>
                            </div>
                            <div class="details">
                                <i class="fa-solid fa-phone"></i>
                                <span>085321840790</span>
                            </div>
                            <a href="/booking/create/@lapangan.IdLapangan" class="book">Book Now</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</body>
</html>
