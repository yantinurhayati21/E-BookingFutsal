@model List<DaftarMember>
@{
    ViewData["Title"] = "List Members";
    Layout = "_LayoutAdmin";
}
<partial name="_Notification" />
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <title>List Members</title>
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <!-- DataTables CSS -->
    <link rel="stylesheet" href="~/css/datatables.min.css" />
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/style.css" />
</head>

<body>
    <div class="header--wrapper">
        <div class="header--title">
        </div>
        <div class="user--info">
            <img src="~/image/img.jpeg" alt="">
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3>List Members</h3>
                    </div>
                    <div class="card-body">
                        <div class="col-6 text-start">
                            <a asp-controller="DaftarMember" asp-action="Create" class="btn btn-primary">
                                <i class="fas fa-plus"></i> Add Member
                            </a>
                        </div>
                        <div class="data_table">
                            <table id="example" class="table table-striped table-bordered">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Nama Member</th>
                                        <th>Username</th>
                                        <th>Email</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var members in Model)
                                    {
                                        <tr>
                                            <td>@members.NamaMember</td>
                                            <td>@members.Username</td>
                                            <td>@members.Email</td>
                                            <td>
                                                <a href="/DaftarMember/Detail/@members.IdMember" class="btn btn-primary"><i class="fa fa-bookmark" aria-hidden="true"></i> Detail</a>
                                                <a href="/DaftarMember/Update/@members.IdMember" class="btn btn-warning mx-5"><i class="fa fa-pencil" aria-hidden="true"></i> Update</a>
                                                <a href="/DaftarMember/Delete/@members.IdMember" class="btn btn-danger"><i class="fa fa-trash" aria-hidden="true"></i> Delete</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- JavaScript Files -->
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/jquery-3.6.0.min.js"></script>
    <script src="~/js/datatables.min.js"></script>
    <script src="~/js/pdfmake.min.js"></script>
    <script src="~/js/vfs_fonts.js"></script>
    <script src="~/js/custom.js"></script>
</body>
</html>
