@model E_BookingFutsal.Models.DaftarMember

@{
    ViewData["Title"] = "Detail - Member";
    Layout = "_LayoutAdmin";
}

<div class="header--wrapper">
    <div class="header--title">
        <span>Primary</span>
        <h2>dashboard</h2>
    </div>
    <div class="user--info">
        <img src="~/img/image.jpeg" alt="">
    </div>
</div>
<div class="container mt-4">
    <h4 class="text-center mb-4">Details for @Model.NamaMember</h4>
    <hr />

    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-sm-6">
                    <div class="mb-3">
                        <label asp-for="NamaMember" class="col-form-label fw-bold fs-5">Nama Member:</label>
                        <input asp-for="NamaMember" type="text" class="form-control" readonly />
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="mb-3">
                        <label asp-for="Username" class="col-form-label fw-bold fs-5">Username:</label>
                        <input asp-for="Username" type="text" class="form-control" readonly />
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="mb-3">
                        <label asp-for="Password" class="col-form-label fw-bold fs-5">Password:</label>
                        <input asp-for="Password" type="text" class="form-control" readonly />
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="mb-3">
                        <label asp-for="NoHp" class="col-form-label fw-bold fs-5">No Handphone:</label>
                        <input asp-for="NoHp" type="text" class="form-control" readonly />
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="mb-3">
                        <label asp-for="Email" class="col-form-label fw-bold fs-5">Email:</label>
                        <input asp-for="Email" type="text" class="form-control" readonly />
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="mb-3">
                        <label asp-for="Alamat" class="col-form-label fw-bold fs-5">Alamat:</label>
                        <input asp-for="Alamat" type="text" class="form-control" readonly />
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="mb-3">
                        <label asp-for="TanggalLahir" class="col-form-label fw-bold fs-5">Tanggal Lahir:</label>
                        <input asp-for="TanggalLahir" type="text" class="form-control" readonly />
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="mb-3">
                        <label asp-for="Foto" class="col-form-label fw-bold fs-5">Foto Member:</label>
                        <div class="mb-3">
                            @if (!string.IsNullOrEmpty(Model.Foto))
                            {
                                <div class="mb-3 row">
                                    <div class="col-sm-8">
                                        <img src="~/members/@Model.Foto" class="img-fluid" alt="Lapangan Photo" width="300px" height="300px" />
                                        <br />
                                        <a href="@Url.Action("DownloadFoto", "DaftarMember", new { id = Model.IdMember })" download style="color:#2596be">Download Photo</a>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="mb-3 row">
                                    <label class="col-sm-4 col-form-label font-weight-bold fs-5">Foto Member</label>
                                    <div class="col-sm-8">
                                        <span>No Photo Available</span>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-6 col-md-3">
            <a asp-controller="DaftarMember" asp-action="ListMember" class="btn btn-dark form-control">
                Back to List
            </a>
        </div>
    </div>
</div>

@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}