@model Booking
@{
    ViewData["Title"] = "Details booking for " + @Model.Nama;
    Layout = "_LayoutMember";
}

<style>
    .text-center {
        margin-top: 100px;
    }
</style>

<div class="container mt-4">
    <h4 class="text-center mb-4">Details booking for @Model.Nama</h4>
    <hr />

    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-sm-6">
                    <div class="mb-3">
                        <label asp-for="Nama" class="col-form-label fw-bold fs-5">Nama Pemesan</label>
                        <input asp-for="Nama" type="text" class="form-control" readonly />
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="mb-3">
                        <label asp-for="StatusMember.StatusMember" class="col-form-label fw-bold fs-5">Status Member</label>
                        <input asp-for="StatusMember.StatusMember" type="text" class="form-control" readonly />
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="mb-3">
                        <label asp-for="NoHp" class="col-form-label fw-bold fs-5">Nomor Handphone:</label>
                        <input asp-for="NoHp" type="text" class="form-control" readonly />
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="mb-3">
                        <label asp-for="Email" class="col-form-label fw-bold fs-5">Email:</label>
                        <input asp-for="Email" type="text" class="form-control" readonly />
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="mb-3">
                        <label asp-for="Lapangan.NamaLapangan" class="col-form-label fw-bold fs-5">Nama Lapangan:</label>
                        <input asp-for="Lapangan.NamaLapangan" type="text" class="form-control" readonly />
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="mb-3">
                        <label asp-for="TglBooking" class="col-form-label fw-bold fs-5">Tanggal Booking:</label>
                        <input asp-for="TglBooking" type="text" class="form-control" readonly />
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="mb-3">
                        <label asp-for="WaktuBooking" class="col-form-label fw-bold fs-5">Waktu Booking:</label>
                        <input asp-for="WaktuBooking" type="text" class="form-control" readonly />
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="mb-3">
                        <label asp-for="Durasi" class="col-form-label fw-bold fs-5">Durasi Booking:</label>
                        <input asp-for="Durasi" type="text" class="form-control" readonly />
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="mb-3">
                        <label asp-for="Status.NamaStatus" class="col-form-label fw-bold fs-5">Status Booking:</label>
                        <input asp-for="Status.NamaStatus" type="text" class="form-control" readonly />
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="mb-3">
                        <label asp-for="TotalHarga" class="col-form-label fw-bold fs-5">Total Harga:</label>
                        <input asp-for="TotalHarga" type="text" class="form-control" readonly />
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-6 col-md-3">
            <a asp-controller="Booking" asp-action="ListBooking" class="btn btn-dark form-control mb-3">
                Back
            </a>
        </div>
    </div>
</div>
